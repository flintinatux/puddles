{
  "name": "puddles-demo",
  "version": "0.0.0",
  "description": "Puddles demo",
  "author": "flintinatux",
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist",
    "prewatch": "yarn run clean",
    "prewatch:styles": "yarn run build:styles",
    "serve": "browser-sync start -s dist -f dist --port 3000 --no-open --no-notify --extensions *.html",
    "watch": "run-p watch:*",
    "watch:scripts": "watchify src/app.js -d -v -o 'exorcist dist/app.js.map > dist/app.js'",
    "watch:templates": "pug -o dist -w src/*.pug"
  },
  "dependencies": {
    "ramda": "^0.24.1"
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "exorcist": "^0.4.0",
    "npm-run-all": "^4.1.1",
    "pug-cli": "^1.0.0-alpha6",
    "watchify": "^3.9.0"
  }
}

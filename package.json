{
  "name": "puddles",
  "version": "1.0.1",
  "description": "Tiny turnkey Redux vdom app framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flintinatux/puddles.git"
  },
  "keywords": [
    "framework",
    "redux",
    "snabbdom",
    "vdom"
  ],
  "author": "flintinatux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flintinatux/puddles/issues"
  },
  "homepage": "https://github.com/flintinatux/puddles#readme",
  "main": "index.js",
  "scripts": {
    "build": "browserify -s p index.js | buble > dist/puddles.js",
    "clean": "rm -rf dist && mkdir -p dist",
    "lint": "eslint demo/client lib test index.js",
    "postbuild": "uglifyjs dist/puddles.js -c -m > dist/puddles.min.js",
    "postversion": "git push --tags origin master",
    "prebuild": "yarn clean && yarn lint",
    "preversion": "git checkout master && yarn build",
    "test": "mocha --reporter dot"
  },
  "dependencies": {
    "snabbdom": "^0.7.0"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "buble": "^0.15.2",
    "chai": "^3.5.0",
    "crocks": "^0.7.1",
    "eslint": "^4.6.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.1.2",
    "raf": "^3.3.0",
    "ramda": "^0.24.1",
    "uglify-js": "^2.7.3"
  }
}

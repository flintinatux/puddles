{
  "name": "puddles",
  "version": "0.1.3",
  "description": "Tiny redux-inspired vdom app framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flintinatux/puddles.git"
  },
  "keywords": [
    "framework",
    "redux",
    "snabbdom",
    "vdom"
  ],
  "author": "flintinatux",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flintinatux/puddles/issues"
  },
  "homepage": "https://github.com/flintinatux/puddles#readme",
  "main": "index.js",
  "scripts": {
    "build": "browserify -s p index.js | buble > dist/puddles.js",
    "clean": "rm -rf dist/*",
    "postbuild": "uglifyjs dist/puddles.js -c -m > dist/puddles.min.js",
    "prebuild": "npm run clean && mkdir -p dist"
  },
  "dependencies": {
    "flyd": "^0.2.2",
    "ramda": "^0.22.1",
    "snabbdom": "^0.5.1"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "buble": "^0.13.1",
    "uglify-js": "^2.7.3"
  }
}

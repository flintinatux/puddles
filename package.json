{
  "name": "puddles",
  "version": "1.0.1",
  "description": "Tiny turnkey Redux vdom app framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flintinatux/puddles.git"
  },
  "keywords": [
    "framework",
    "redux",
    "snabbdom",
    "vdom"
  ],
  "author": "flintinatux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flintinatux/puddles/issues"
  },
  "homepage": "https://github.com/flintinatux/puddles#readme",
  "main": "index.js",
  "scripts": {
    "build": "browserify -s p index.js | buble > dist/puddles.js",
    "clean": "rm -rf dist && mkdir -p dist",
    "lint": "eslint demo/client lib test index.js",
    "postbuild": "uglifyjs dist/puddles.js -cm > dist/puddles.min.js",
    "postversion": "git push --tags origin master",
    "prebuild": "yarn run clean && yarn run lint",
    "preversion": "git checkout master && yarn run build",
    "test": "mocha --reporter dot"
  },
  "dependencies": {
    "snabbdom": "^0.7.0",
    "tinyfunk": "^0.0.1"
  },
  "devDependencies": {
    "@articulate/spy": "^0.0.1",
    "browserify": "^13.1.0",
    "buble": "^0.16.0",
    "chai": "^3.5.0",
    "crocks": "^0.7.1",
    "eslint": "^4.6.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.1.2",
    "raf": "^3.3.0",
    "ramda": "^0.24.1",
    "redux-promise": "^0.5.3",
    "uglify-js": "^3.1.2"
  }
}

{
  "name": "puddles",
  "version": "1.0.1",
  "description": "Tiny turnkey Redux vdom app framework",
  "repository": "git@github.com:flintinatux/puddles.git",
  "keywords": [
    "framework",
    "redux",
    "snabbdom",
    "vdom"
  ],
  "main": "index.js",
  "author": "flintinatux",
  "license": "MIT",
  "nyc": {
    "check-coverage": true,
    "include": [
      "index.js",
      "lib/**/*.js"
    ],
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  },
  "scripts": {
    "build": "browserify -s p index.js | buble > dist/puddles.js",
    "clean": "rm -rf dist && mkdir -p dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint demo/client lib test index.js",
    "postbuild": "uglifyjs dist/puddles.js -cm > dist/puddles.min.js",
    "postversion": "git push --tags origin master",
    "prebuild": "yarn run clean && yarn run lint",
    "preversion": "git checkout master && yarn run build",
    "test": "mocha --reporter dot",
    "test:ci": "yarn run lint && yarn run test:coverage && yarn run coverage",
    "test:coverage": "nyc yarn run test"
  },
  "dependencies": {
    "snabbdom": "^0.7.0",
    "tinyfunk": "^0.1.0"
  },
  "devDependencies": {
    "@articulate/spy": "^0.0.1",
    "browserify": "^13.1.0",
    "buble": "^0.16.0",
    "chai": "^3.5.0",
    "coveralls": "^3.0.0",
    "crocks": "^0.7.1",
    "eslint": "^4.6.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.1.2",
    "nyc": "^11.2.1",
    "redux-promise": "^0.5.3",
    "uglify-js": "^3.1.2"
  }
}
